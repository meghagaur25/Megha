<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout


    android:android_layout_width="match_parent"
    android:android_layout_height="match_parent"
    android:android_paddingBottom="@dimen/activity_vertical_margin"
    android:android_paddingLeft="@dimen/activity_horizontal_margin"
    android:android_paddingRight="@dimen/activity_horizontal_margin"
    android:android_paddingTop="@dimen/activity_vertical_margin"
    android:app_layout_behavior="@string/appbar_scrolling_view_behavior"
    android:tools_context="com.tutorials.hp.recyclerinsetselectshow.MainActivity"
    android:tools_showIn="@layout/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="15dp" android:layout_width="15dp">

    <android.support.v7.widget.RecyclerView
        android:android_layout_width="match_parent"
        android:android_layout_height="match_parent"
        android:android_id="@+id/mRecycler"
        ></android.support.v7.widget.RecyclerView>
</RelativeLayout>